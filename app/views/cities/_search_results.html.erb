<div class="well span6 search_form result" style="display:none;">
  <% if @cities == nil %>
  <% elsif @cities.empty? %>
    <div class="title-text">So sorry, we were unable to find that city!</div>
  <% else %>
      <ul class="unstyled">
      <% @cities.each do |city| %>
          <li class="well" id="list_results"><%= link_to(city.full_name, city) %></li>
      <% end %>
    </ul>
  <% end %>
</div>