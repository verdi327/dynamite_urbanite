<div class="well">
  <div class="page-header"><h3>Let's Juxtapose People's Feelings via Twitter</h3></div>
  <div class="row">
    <div class="span5">
      <p><%= "Love #{@city.name}" %> </p>
      <ul class="unstyled">
      <% @city.love_tweets.each_with_index do |post| %>
        <li><%= "#{post.tweeted_by} exclaims: #{post.tweet}" %></li>
      <% end %>
      </ul>
    </div>

    <div class="span5 offset1">
    <p><%= "Hate #{@city.name}" %> </p>
      <ul class="unstyled">
      <% @city.hate_tweets.each do |post| %>
        <li><%= "#{post.tweeted_by} scoffs: #{post.tweet}" %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>