<div class="well">
  <div class="page-header page-top-header">A Picture is Worth a Thousand Words</div>
  <div class="row">
    <% if @city.no_valid_photos %>
      <div class="span6">
        <h4>Currently No Photos Available</h4>
        <%= image_tag("http://thedesigninspiration.com/wp-content/uploads/2010/03/fail-whale/Fail-Whale-15.jpg") %>
      </div>
    <% else %>
    <div class="span12">
      <ul class="unstyled">
      <div class="pagination-right"><%= paginate @photos %></div>
      <div class="clearfix"></div>
      <% @photos.each do |photo| %>
        <li class="span3 no_margin display_photo"><%= image_tag(photo.image) %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  </div>
</div>